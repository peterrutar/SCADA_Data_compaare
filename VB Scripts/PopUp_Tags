'Screen Width. Default = 400
Width = 400

'Home Tab
ScreenItems("Button_Home").Left = 5
ScreenItems("Tab_Home").Left = ScreenItems("Button_Home").Left
ScreenItems("Button_Home").Width = 130
ScreenItems("Tab_Home").Width = ScreenItems("Button_Home").Width
ScreenItems("Icon_Home").Left = 50

'Settings Tab
ScreenItems("Button_Settings").Left = 135
ScreenItems("Tab_Settings").Left = ScreenItems("Button_Settings").Left
ScreenItems("Button_Settings").Width = 130
ScreenItems("Tab_Settings").Width = ScreenItems("Button_Settings").Width
ScreenItems("Icon_Settings").Left = 180

'Alarm Tab
ScreenItems("Button_Alarm").Left = 265
ScreenItems("Tab_Alarm").Left = ScreenItems("Button_Alarm").Left
ScreenItems("Button_Alarm").Width = 130
ScreenItems("Tab_Alarm").Width = ScreenItems("Button_Alarm").Width
ScreenItems("Icon_Alarm").Left = 310

'Screen Items just for width expanding/shirnking
ScreenItems("Background_1st").Width = 400
ScreenItems("Background_2nd").Width = 390
